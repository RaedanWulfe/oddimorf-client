{
  "name": "oddimorf_hmi",
  "version": "1.0.0",
  "description": "Operated Dynamic Distributed Modular Radar Framework Client HMI",
  "author": "W.L. Carstens",
  "main": "./dist/server.cjs",
  "repository": "https://github.com/RaedanWulfe/oddimorf-client",
  "license": "MIT",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=14.15.3 <15"
  },
  "scripts": {
    "start": "node ./dist/server.cjs",
    "gen:certs": "node ./admin/generate-certificates.js",
    "setup:dev": "@powershell npm i -D",
    "setup": "@powershell copy ./package.json ./src/package.json && cd ./src && npm i --only=production",
    "build:server": "webpack --config webpack-server.cjs --mode development",
    "build:client-dev": "webpack --config webpack-client.dev.cjs --mode development",
    "build:client": "webpack --config webpack-client.prod.cjs --mode production",
    "watch:client-dev": "webpack --config webpack-client.dev.cjs --mode development --watch",
    "watch:client": "webpack --config webpack-client.prod.cjs --mode production --watch",
    "test": "node ./test/nodejs-app.js"
  },
  "dependencies": {
    "express": "github:expressjs/express#4.17.1",
    "leaflet": "github:Leaflet/Leaflet#v1.7.1",
    "leaflet-geometryutil": "github:makinacorpus/Leaflet.GeometryUtil#v0.9.3",
    "leaflet-realtime": "github:perliedman/leaflet-realtime#2.2.0",
    "leaflet.heat": "github:Leaflet/Leaflet.heat",
    "leaflet.polylinemeasure": "github:ppete2/Leaflet.PolylineMeasure",
    "mqtt": "github:mqttjs/MQTT.js#v4.2.6",
    "selfsigned": "^1.10.11",
    "simpleheat": "github:mourner/simpleheat#v0.4.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^6.4.1",
    "css-loader": "^5.2.7",
    "css-minimizer-webpack-plugin": "^1.3.0",
    "file-loader": "^6.2.0",
    "mini-css-extract-plugin": "^1.6.2",
    "node-sass": "^5.0.0",
    "path": "^0.12.7",
    "postcss": "^8.3.5",
    "postcss-cli": "^8.3.1",
    "postcss-loader": "^5.3.0",
    "postcss-preset-env": "^6.7.0",
    "sass-loader": "^10.2.0",
    "shelljs": "^0.8.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.45.1",
    "webpack-cli": "^4.7.2",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^2.5.2",
    "workbox-webpack-plugin": "^6.1.5"
  },
  "browserslist": "last 4 versions"
}
